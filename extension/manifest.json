{
  "manifest_version": 3,
  "name": "Twitter Mass Follow",
  "version": "2.0",
  "minimum_chrome_version": "41.0.0.0",
  "description": "Auto bulk follow and unfollow on twitter with style",
  "homepage_url": "http://tlemens.de",
  "author": "Clemens Teichmann",
  "permissions": ["storage", "https://twitter.com/*", "unlimitedStorage"],
  "content_scripts": [
    {
      "matches":  ["https://twitter.com/*"],
      "js":       ["class_list.js", "extension.js"],
      "css":      ["extension.css"]
    }
  ],
  "web_accessible_resources": [
    "extension.html",
    "icon128.png"
  ],
  "icons": {
    "48":   "icon48.png",
    "128":  "icon128.png" 
  }
}
